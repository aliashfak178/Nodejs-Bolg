<form action="/createPost" method="POST" enctype="multipart/form-data">
    <div class="group">
        <h3 class="h3">Create New Post</h3>
       <label for="title">Title</label>
       <input type="text" name="title" id="title" class="control" placeholder="post Title" value="<%= title %>">
    </div> 
    <div class="group">
       <label for="body">Body</label>
       <textarea name="body" class="control"  id="body" cols="30" rows="10" placeholder="post Desciptions" ><%= body %></textarea>
    </div>
    <div class="group">
       <label for="ImageLable" class="file-Lable">Upload Image</label>
       <input type="file" name="Image" id="ImageLable">
    </div> 
    <div class="group">
       <button type="submit" class="submit-btn"> Add Post</button>
    </div>        
</form>