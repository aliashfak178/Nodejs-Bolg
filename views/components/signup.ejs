<div class="form-container">
    <% if(errors.length > 0) { %>
        <div class="errors">
            <% errors.forEach(error =>{ %>
                <span class="error"><%= error.msg %> </span>
            <% }) %>  
        </div>
    <% } %>  
    <form class="account" action="/register" method="POST">
        <div class="group">
            <h3>Create New Account</h3>
        </div>
        <div class="group">
            <label for="name">Name</label>
        <input type="text" autocomplete="off" name="name" class="control" id="name" placeholder="Name" value=<% if(inputs) { %> <%= inputs.name %> <% } %> >
        </div>
        <div class="group">
            <label for="email">Email</label>
            <input type="email" class="control" autocomplete="off" name="email" id="email" placeholder="Email" value=<% if(inputs) { %> <%= inputs.email %> <% } %>>
        </div>
        <div class="group">
            <label for="password">Password</label>
            <input type="password" autocomplete="off" class="control" name="password" id="password" placeholder="Password" autocomplete="off" value=<% if(inputs) { %> <%= inputs.password %> <% } %>>
        </div>
        <div class="group">
            <input type="submit" class="submit-btn" value="Register">
        </div>
    </form>
</div>